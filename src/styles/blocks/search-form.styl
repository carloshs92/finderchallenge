.search-form
  &__text
    border 1px solid #aaa  
    border-radius 5px
    height 30px
    margin-right 10px 
  &__button
    background #ccc
    border 0px solid #111
    color #333
    margin-right 10px
    padding 5px 10px
    transition background 0.5s ease-in
    &:hover:not(&--disabled)
      background #bbb
    &--disabled
      background #999
      color #ccc
  &--fieldset
    align-items center    
    border 0
    display flex
  &__textarea
    border 1px solid #aaa
    border-radius 5px
    height 30px
    margin-right 10px
    width 270px
    &--hide
      display none
        
/*
    for responsive
*/
.search-form
  +below(650px)
    display none